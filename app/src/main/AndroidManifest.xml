<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oliveira.wagner.gaparawa">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Obter Localização por Hardware-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Obter Localização por wi-fi e triangulação de antenas-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".GaparawaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MapasActivity"></activity>
        <!-- Google play services -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Chave de acesso à API do Google Maps -->
        <activity android:name=".DebugActivity" />

        <activity
            android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".ProdutoActivity"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".ProdutoCadastroActivity" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>